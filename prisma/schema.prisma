// Prisma Schema for Household Hub
// PostgreSQL database (Supabase)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// Households
// ============================================================================

model Household {
  id        String   @id @default(uuid())
  ownerId   String?
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  owner          HouseholdMember?       @relation("HouseholdOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  members        HouseholdMember[]
  tasks          Task[]
  completions    CompletionRecord[]
  meals          Meal[]
  shoppingItems  ShoppingItem[]
  calendarEvents CalendarEvent[]

  @@index([ownerId])
  @@index([name])
  @@map("households")
}

// ============================================================================
// Household Members
// ============================================================================

enum HouseholdRole {
  admin
  adult
  child
}

enum HouseholdRelation {
  parent
  child
  grandparent
  sibling
  aunt_uncle
  cousin
  guardian
  partner
  roommate
  other
}

enum MemberLocale {
  en
  es
}

model HouseholdMember {
  id          String         @id @default(uuid())
  householdId String
  clerkUserId String?        @unique
  name        String
  role        HouseholdRole
  locale      MemberLocale   @default(en)
  relation    HouseholdRelation?
  relationLabel String?
  color       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  household          Household        @relation(fields: [householdId], references: [id], onDelete: Cascade)
  ownedHouseholds    Household[]      @relation("HouseholdOwner")
  assignedTasks      Task[]
  completions        CompletionRecord[]
  permissions        MemberPermission[]

  @@index([householdId])
  @@index([name])
  @@map("household_members")
}

// ============================================================================
// Tasks & Chores
// ============================================================================

enum TaskPriority {
  low
  medium
  high
}

enum TaskRecurrence {
  daily
  weekly
  monthly
}

enum PermissionKey {
  member_add
  member_delete
  member_role_change
  task_create
  task_update
  task_delete
  chores_complete
  chores_delete
  calendar_create
  calendar_update
  calendar_delete
  shopping_add
  shopping_update
  shopping_delete
  meal_create
  meal_update
  meal_delete
}

model RolePermission {
  id         String        @id @default(uuid())
  role       HouseholdRole
  permission PermissionKey
  allowed    Boolean       @default(false)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([role])
  @@index([permission])
  @@unique([role, permission])
  @@map("role_permissions")
}

model MemberPermission {
  id         String        @id @default(uuid())
  memberId   String
  permission PermissionKey
  allowed    Boolean       @default(false)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  // Relations
  member HouseholdMember @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([memberId, permission])
  @@index([memberId])
  @@index([permission])
  @@map("member_permissions")
}

model Task {
  id           String          @id @default(uuid())
  householdId  String
  title        String
  description  String?
  assignedToId String?        // Foreign key to HouseholdMember
  dueDate      DateTime?
  priority     TaskPriority    @default(medium)
  recurrence   TaskRecurrence? // If set, this is a recurring chore
  completed    Boolean         @default(false) // For one-time tasks only
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  household   Household        @relation(fields: [householdId], references: [id], onDelete: Cascade)
  assignedTo  HouseholdMember? @relation(fields: [assignedToId], references: [id], onDelete: SetNull)
  completions CompletionRecord[]

  @@index([householdId])
  @@index([assignedToId])
  @@index([recurrence])
  @@index([completed])
  @@index([priority])
  @@map("tasks")
}

model CompletionRecord {
  id            String   @id @default(uuid())
  householdId   String
  taskId        String
  completedAt   DateTime @default(now())
  completedById String // Foreign key to HouseholdMember

  // Relations
  household   Household       @relation(fields: [householdId], references: [id], onDelete: Cascade)
  task        Task            @relation(fields: [taskId], references: [id], onDelete: Cascade)
  completedBy HouseholdMember @relation(fields: [completedById], references: [id], onDelete: Cascade)

  @@index([householdId])
  @@index([taskId])
  @@index([completedAt])
  @@index([completedById])
  @@map("completion_records")
}

// ============================================================================
// Meal Planning
// ============================================================================

enum MealType {
  breakfast
  lunch
  dinner
}

model Meal {
  id          String   @id @default(uuid())
  householdId String
  name        String   // e.g., "Spaghetti and Meatballs"
  date        DateTime // Specific date for this meal
  mealType    MealType
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId])
  @@index([date])
  @@index([mealType])
  @@map("meals")
}

// ============================================================================
// Shopping Lists
// ============================================================================

model ShoppingItem {
  id          String   @id @default(uuid())
  householdId String
  name        String
  quantity    String?  // e.g., "2 lbs", "1 gallon"
  category    String   // e.g., "Produce", "Meat & Seafood", "Dairy"
  completed   Boolean  @default(false)
  listId      String?  // NULL = global list, future: can add ShoppingList model
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId])
  @@index([category])
  @@index([completed])
  @@index([listId])
  @@map("shopping_items")
}

// ============================================================================
// Calendar Events
// ============================================================================

enum EventType {
  appointment
  event
  reminder
}

enum EventRecurrence {
  daily
  weekly
  monthly
}

model CalendarEvent {
  id          String            @id @default(uuid())
  householdId String
  title       String
  description String?
  date        DateTime          // Start date
  time        String?           // Optional time (HH:mm format)
  type        EventType
  recurrence  EventRecurrence?  // NULL = one-time event
  endDate     DateTime?         // For recurring: when recurrence ends (optional)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId])
  @@index([date])
  @@index([type])
  @@index([recurrence])
  @@map("calendar_events")
}
